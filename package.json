{
  "name": "voice-over-translation",
  "version": "1.0.0",
  "source": "src/index.js",
  "author": "Toil",
  "license": "CC-BY-NC-SA-4.0",
  "description": "A small extension that adds a Yandex Browser video translation to other browsers",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ilyhalight/voice-over-translation.git"
  },
  "keywords": [
    "cli",
    "vot",
    "voice-over-translation"
  ],
  "devDependencies": {
    "@sucrase/webpack-loader": "^2.0.0",
    "@toil/translate": "^1.0.6",
    "@types/bun": "^1.2.5",
    "browser-id3-writer": "^6.2.0",
    "browserslist": "^4.24.4",
    "enquirer": "^2.4.1",
    "eslint": "^9.23.0",
    "eslint-plugin-oxlint": "^0.16.2",
    "eslint-webpack-plugin": "^5.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lightningcss": "^1.29.3",
    "npm-run-all2": "^7.0.2",
    "oxlint": "^0.16.2",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^3.5.3",
    "sass": "^1.86.0",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0",
    "webpack-monkey": "^0.2.1"
  },
  "scripts": {
    "test:ui": "webpack build -c .webpack/test-ui.config.js",
    "build": "webpack build -c .webpack/webpack.config.js",
    "build:min": "webpack build -c .webpack/webpack.config.js --env build_type=minify",
    "build:all": "npx run-p build build:min",
    "build:bun": "bun run build:all",
    "dev": "webpack serve --node-env development",
    "lint": "npx oxlint --ignore-path=.oxlintignore && npx eslint",
    "prepare": "husky",
    "gen:wiki": "bun run ./scripts/wiki-gen/index.js",
    "localize": "npx \"@toil/localize-tui\"",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@vot.js/ext": "^2.3.8",
    "@vot.js/shared": "^2.3.8",
    "bowser": "^2.11.0",
    "chaimu": "^1.0.4",
    "lit": "^3.2.1",
    "requestidlecallback-polyfill": "^1.0.2"
  }
}
